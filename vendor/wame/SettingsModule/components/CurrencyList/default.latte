{form currencyListForm}
	<div n:if="$form->getErrors()" n:foreach="$form->getErrors() as $error" class="alert alert-danger">{$error}</div>

	<div class="panel panel-default">
		<div class="panel-heading">
			{_'Currencies'}
		</div>

		<div n:if="count($currencies) == 0" class="panel-body text-center">
			<div class="lead text-muted">{_'Not created any currency.'}</div>

			<a class="btn btn-success" href="#">
				<span class="fa fa-plus"></span>
				{_'Add currency'}
			</a>
		</div>

		{if count($currencies) > 0}
			<table class="table table-striped">
				<tbody>
					<tr n:foreach="$currencies as $currency"{$currency->main == '1' ? ' class="success" title="' . _('Main currency') . '"'|noescape}>
						<td class="vertical-middle">
							<input n:name="status_{$currency->id}">
						</td>

						<td>
							<strong>{$currency->code}</strong>
						</td>

						<td>
							{$currency->title}
						</td>

						<td>
							{$currency->symbol}
						</td>

						<td>
							&times;
						</td>

						<td>
							<div class="form-group reset-margin">
								<input class="form-control input-sm" n:name="coefficient_{$currency->id}">
							</div>
						</td>
					</tr>
				</tbody>
			</table>

			<div class="panel-footer">
				<button class="btn btn-success" n:name="submit">{_'Save'}</button>
			</div>
		{/if}
	</div>
{/form}